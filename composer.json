{
  "name": "bermuda-software/bss-meteo-widget",
  "type": "typo3-cms-extension",
  "description": "MeteoSwiss NOWCAST Weather Widget for TYPO3 13.4",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Bermuda Software Solutions",
      "email": "anton.marchenko@bermuda-software.ch"
    }
  ],
  "require": {
    "typo3/cms-core": "^13.4",
    "typo3/cms-backend": "^13.4",
    "typo3/cms-frontend": "^13.4"
  },
  "suggest": {
    "typo3/cms-scheduler": "Required to run automatic forecast updates via Scheduler"
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "bss_meteo_widget"
    }
  },
  "autoload": {
    "psr-4": {
      "Bermuda\\BssMeteoWidget\\": "Classes/"
    }
  }
}
